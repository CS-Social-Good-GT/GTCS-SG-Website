{
  "extends": "../../../tsconfig",
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.test.ts", "src/**/*.test.tsx"],
  "exclude": ["src/**/*.test.ts"],
  "compilerOptions": {
    "outDir": "./lib",
    "strict": true,
    "jsx": "react",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.css$"
        }
      }
    ]
  }
}
